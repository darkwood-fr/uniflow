#!/bin/sh

# deploy bash
(cd ../platform-bash;yarn install)

if [[ "$1" == "staging" ]]; then
(cd ../platform-bash;yarn staging-build)
scp public/dist/js/bash.js admin@ssh.darkwood.fr:/var/www/preprod.uniflow.io/public/dist/js/bash.js
fi

if [[ "$1" == "production" ]]; then
(cd ../platform-bash;yarn build)
scp public/dist/js/bash.js admin@ssh.darkwood.fr:/var/www/uniflow.io/public/dist/js/bash.js
fi
