{% extends "@Front/layout.html.twig" %}

{% block body %}

    <div class="container-fluid content">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">

                <h2>{{ 'user.profile.title'| trans }}</h2>

                {% for type, messages in app.session.flashBag.all %}
                    {% for message in messages %}
                        <div class="{{ type }}">
                            {{ message|trans({}, 'FOSUserBundle') }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <form action="{{ path('fos_user_profile_edit') }}" method="post" novalidate>

                    {{ form_widget(form._token) }}

                    <div class="form-group col-sm-12">
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr':{'class':'form-control', 'placeholder': ('user.profile.email'| trans) } }) }}
                    </div>

                    <div class="form-group col-sm-12">
                        {{ form_errors(form.current_password) }}
                        {{ form_widget(form.current_password, {'attr':{'class':'form-control', 'placeholder': ('user.profile.password'| trans)} }) }}
                    </div>

                    <div class="form-group col-sm-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'user.profile.submit'| trans }}</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

{% endblock %}

