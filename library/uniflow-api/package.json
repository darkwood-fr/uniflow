{
  "name": "@uniflow-io/uniflow-api",
  "version": "1.1.12",
  "description": "Uniflow api",
  "author": {
    "name": "Mathieu Ledru",
    "email": "matyo@uniflow.io"
  },
  "bugs": {
    "url": "https://github.com/uniflow-io/uniflow/issues"
  },
  "homepage": "https://github.com/uniflow-io/uniflow/tree/master/library/uniflow-api#readme",
  "keywords": [
    "uniflow"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uniflow-io/uniflow.git",
    "directory": "library/uniflow-api"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "dist/main.ts",
  "types": "dist/main.d.ts",
  "files": [
    "bin",
    "dist",
    "public",
    "oclif.manifest.json"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "uniflow-api"
  },
  "bin": "./bin/uniflow-api",
  "scripts": {
    "prepack": "make build",
    "start": "run-script-os",
    "start:default": "cd bin && ./uniflow-api",
    "start:windows": "cd bin && uniflow-api"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/errors": "^1.3.3",
    "argon2": "0.27.0",
    "axios": "^0.20.0",
    "body-parser": "1.19.0",
    "celebrate": "^13.0.3",
    "convict": "^6.0.0",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-jwt": "6.0.0",
    "helmet": "4.1.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.6.2",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.14",
    "open": "^7.3.0",
    "reflect-metadata": "0.1.13",
    "slugify": "^1.4.5",
    "sqlite3": "^5.0.0",
    "typedi": "0.8.0",
    "typeorm": "0.2.28"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "@types/chai": "^4.2.14",
    "@types/convict": "^5.2.1",
    "@types/cors": "2.8.8",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.8",
    "@types/express-jwt": "0.0.42",
    "@types/hapi__joi": "^17.1.6",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.15",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.3",
    "@types/morgan": "1.9.1",
    "@types/node": "14.14.0",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "jest": "^26.6.1",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.6",
    "run-script-os": "^1.1.1",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "9.0.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "!**/tests/coverage/**",
      "!**/tests/utils/**",
      "!**/tests/images/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
