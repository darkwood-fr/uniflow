<idea-plugin>
    <id>fr.darkwood.uniflow</id>
    <name>Uniflow</name>
    <vendor email="matyo91@gmail.com" url="https://uniflow.io">Darkwood</vendor>

    <description><![CDATA[
    Uniflow plugin.<br>
    <em>Phpstorm client for uniflow</em>
    ]]></description>

    <!--depends>com.jetbrains.php</depends-->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="fr.darkwood.uniflow.Settings" />
        <projectConfigurable instance="fr.darkwood.uniflow.SettingsForm"
                             displayName="Uniflow"
                             id="Uniflow.SettingsForm"
                             parentId="tools"
                             nonDefaultProject="true"
        />
    </extensions>

    <actions>
        <group id="ProgramActionGroup" class="fr.darkwood.uniflow.actions.ProgramActionGroup" popup="true"
               text="Uniflow" description="Uniflow plugin">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>
