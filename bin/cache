#!/bin/sh

echo ""
echo ""
echo "[1;96m-------------------- [00m"
echo "[1;96m----------- FLUSH CACHE [00m"
echo "[1;96m-------------------- [00m"


echo ""
echo ""
echo "[1;93m----------- CLEAR CACHE [00m"
echo ""

rm -rf var/cache/* var/logs/*
echo "[1;92m Done... [00m"

echo ""
echo ""
echo "[1;93m----------- RESTART REDIS [00m"
echo ""

sudo service redis restart
redis-cli flushall

echo ""
echo ""
echo "[1;93m----------- RESTART PHP-FPM [00m"
echo ""

sudo service php7.0-fpm restart

echo ""
echo ""
echo "[1;93m----------- RESTART NGNIX [00m"
echo ""

sudo service nginx restart

#echo ""
#echo ""
#echo "[1;93m----------- RESTART APACHE [00m"
#echo ""
#
#sudo service apache2 restart

echo ""
echo ""
echo "[1;93m----------- RESTART MYSQL [00m"
echo ""

sudo service mysql restart
