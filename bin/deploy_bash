#!/bin/sh

# deploy bash
(cd ../../clients/bash-client;yarn install)

if [[ "$1" == "staging" ]]; then
(cd ../../clients/bash-client;yarn staging-build)
scp ../../clients/bash-client/dist/js/bash.js admin@ssh.darkwood.fr:/var/www/preprod.uniflow.io/public/dist/js/bash.js
fi

if [[ "$1" == "production" ]]; then
(cd ../../clients/bash-client;yarn build)
scp ../../clients/bash-client/dist/js/bash.js admin@ssh.darkwood.fr:/var/www/uniflow.io/public/dist/js/bash.js
fi
